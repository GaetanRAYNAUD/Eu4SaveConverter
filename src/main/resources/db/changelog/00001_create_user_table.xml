<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

  <changeSet id="create_table" author="graynaud">
    <createTable tableName="user">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" unique="true"/>
      </column>

      <column name="steam_id" type="varchar(18)">
        <constraints nullable="false"/>
      </column>

      <column name="last_connection_date" type="timestamp">
        <constraints nullable="false"/>
      </column>

      <column name="creation_date" type="timestamp">
        <constraints nullable="false"/>
      </column>

      <column name="creation_user" type="varchar(18)">
        <constraints nullable="false"/>
      </column>

      <column name="modification_date" type="timestamp">
        <constraints nullable="false"/>
      </column>

      <column name="modification_user" type="varchar(18)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createIndex indexName="idx_steam_id" tableName="user">
      <column name="steam_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
